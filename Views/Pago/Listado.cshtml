@model IEnumerable<Tp_Inmobiliaria_Ledesma_Lillo.Models.Pago>
@{
    ViewData["Title"] = "Pago";
}
<div class="col-md-4">
        <form asp-action="PagosEliminados">
            <div class="form-group">
                <input type="submit" value="Pagos Anulados" class="btn btn-primary" />
            </div>
        </form> 
</div> 
<br>           
<div>
<h1>Listado de Pagos</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContratoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contrato.Inquilino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Importe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContratoId)
            </td>
            <td>
                 @(item.contrato.Inquilino.Apellido)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            @if(User.IsInRole("Administrador")){
                <td>
                    <a asp-action="Editar" asp-route-id="@item.IdPago" title="Editar" class="btn btn-primary"><i class="fa-solid fa-square-pen"></i></a>
                </td>
            }
            <td>
				<a asp-action="Detalle" asp-route-id="@item.IdPago" title="Detalle" class="btn btn-success"><i class="fa-solid fa-circle-info"></i></a>
			</td>
            @if(User.IsInRole("Administrador")){
                <td>
                    <a asp-action="Eliminar" asp-route-id="@item.IdPago" title="Eliminar" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
</div>