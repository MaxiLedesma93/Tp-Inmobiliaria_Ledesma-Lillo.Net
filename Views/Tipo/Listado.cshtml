@model IEnumerable<Tp_Inmobiliaria_Ledesma_Lillo.Models.Tipo>

@{
    ViewData["Title"] = "Tipo Inmueble";
}

<div>
	<h1>Tipos de Inmueble</h1>
<p>
    <a asp-action="Crear" title="Agregar Nuevo"><i class="btn btn-primary fa-solid fa-square-plus"></i></a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
				<a asp-action="Detalle" asp-route-id="@item.IdTipo" title="Detalle" class="btn btn-success"><i class="fa-solid fa-circle-info"></i></a>
			</td>
            @if(User.IsInRole("Administrador")){
                <td>
                    <a asp-action="Eliminar" asp-route-id="@item.IdTipo" title="Eliminar" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
</div>

