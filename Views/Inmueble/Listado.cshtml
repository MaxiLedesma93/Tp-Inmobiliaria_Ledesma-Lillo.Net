@model IEnumerable<Tp_Inmobiliaria_Ledesma_Lillo.Models.Inmueble>
@{
    ViewData["Title"] = "Inmueble";
}
<div>
	<h1>Inmuebles</h1>
<p>
     <a asp-action="Crear" title="Agregar Nuevo"><i class="btn btn-primary fa-solid fa-square-plus"></i></a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ambientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropietarioId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ambientes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uso)
            </td>
            <td>
               @(item.TipoInmueble.Descripcion)
            </td>
            <td>
               @(item.Duenio.Nombre + " " + item.Duenio.Apellido)
            </td>
            @if(User.IsInRole("Administrador")){
                <td>
                    <a asp-action="Editar" asp-route-id="@item.IdInmueble" title="Editar" class="btn btn-primary"><i class="fa-solid fa-square-pen"></i></a>
                </td>
            }
            <td>
				<a asp-action="Detalle" asp-route-id="@item.IdInmueble" title="Detalle" class="btn btn-success"><i class="fa-solid fa-circle-info"></i></a>
			</td>
            @if(User.IsInRole("Administrador")){
                <td>
                    <a asp-action="Eliminar" asp-route-id="@item.IdInmueble" title="Eliminar" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
</div>